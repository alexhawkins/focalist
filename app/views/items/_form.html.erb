
   <!-- Add remote: true to enable Ajax on the form -->
    <%= form_for [list, item], remote: true do |f| %>
    <div class="form-group">
      <%= f.text_field :description, class: 'form-control', placeholder: 'Add an "Item" in your Inbox' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Save', class: 'btn btn-success hide' %>
    </div>
    <% end %>
