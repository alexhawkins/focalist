<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for [@list, @item] do |f| %>
    <div class="form-group">
      <%= f.text_field :description, class: 'form-control', placeholder: 'Add an "Item" in your Inbox' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Save', class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>