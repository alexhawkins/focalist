    <!-- loop through each item -->
    <%= content_tag :div, id: "item-#{item.id}" do %>
        <h4> 
          <!-- Notice how we create unique id attributes for each item in a list. We later will use this to add and destroy via Ajax -->
            <%= link_to "[ x ]", [@list, item], method: :delete, class: 'btn btn-xs btn-danger', remote: true %>
            <%= item.description %> &raquo; 
            <small>
              <%= time_ago_in_words(item.created_at) %> ago
            </small> 
        </h4>
    <% end %>
